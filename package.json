{
  "name": "hotpot",
  "version": "1.6.7",
  "description": "Cordova/nwjs livereload server for Pug, SASS and Browserify",
  "keywords": [
    "cordova",
    "express",
    "browserify",
    "es6",
    "babelify",
    "babel",
    "sass",
    "pug",
    "livereload",
    "cli"
  ],
  "license": "MIT",
  "author": "Benito Gomez <benitogf@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/benitogf/hotpot.git"
  },
  "standard": {
    "globals": [
      "chai",
      "expect"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "preferGlobal": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "directories": {
    "bin": "./bin",
    "lib": "./lib"
  },
  "main": "./lib/index.js",
  "bin": {
    "hotpot": "./bin/hotpot"
  },
  "scripts": {
    "hint": "standard --verbose | snazzy",
    "start": "node ./bin/hotpot",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "nyc --include=lib mocha"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "bistre": "^1.0.1",
    "bole": "^3.0.2",
    "browserify": "^16.2.2",
    "chalk": "^2.3.0",
    "compression": "^1.7.1",
    "csserror": "^2.0.2",
    "express": "^4.16.2",
    "gaze": "^1.1.2",
    "get-stream": "^3.0.0",
    "inline-source-map-comment": "^1.0.5",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "node-sass": "^4.6.0",
    "opn": "^5.1.0",
    "pug": "^2.0.0-rc.4",
    "q": "^1.5.1",
    "replacestream": "^4.0.2",
    "require-globify": "^1.4.1",
    "riot-compiler": "^3.2.6",
    "riotify": "^3.0.0",
    "shelljs": "^0.8.2",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "stringify": "^5.1.0",
    "uglify-js": "^3.1.8",
    "watchify": "^3.9.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "snazzy": "^7.0.0",
    "standard": "^11.0.1"
  }
}
