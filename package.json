{
  "name": "hotpot",
  "version": "1.4.8",
  "description": "Cordova/nwjs livereload server for Pug, SASS and Browserify",
  "keywords": [
    "cordova",
    "express",
    "browserify",
    "es6",
    "babelify",
    "babel",
    "sass",
    "pug",
    "livereload",
    "cli"
  ],
  "license": "MIT",
  "author": "Benito Gomez <benitogf@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/benitogf/hotpot.git"
  },
  "standard": {
    "globals": [
      "chai",
      "expect"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "preferGlobal": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "directories": {
    "bin": "./bin",
    "lib": "./lib"
  },
  "main": "./lib/index.js",
  "bin": "./bin/hotpot.js",
  "scripts": {
    "hint": "standard --verbose | snazzy",
    "start": "node ./bin/hotpot",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "nyc --include=lib mocha"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "bistre": "^1.0.1",
    "bole": "^3.0.2",
    "browserify": "^14.0.0",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "crypto": "0.0.3",
    "csserror": "^2.0.2",
    "express": "^4.14.1",
    "gaze": "^1.1.2",
    "get-stream": "^3.0.0",
    "inline-source-map-comment": "^1.0.5",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "node-sass": "^4.4.0",
    "node-sass-evergreen": "^1.1.2",
    "opn": "^4.0.2",
    "pug": "^2.0.0-beta10",
    "q": "^1.4.1",
    "replacestream": "^4.0.2",
    "require-globify": "^1.4.1",
    "riot-compiler": "^3.1.2",
    "riotify": "^2.0.0",
    "shelljs": "^0.7.6",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2",
    "stringify": "^5.1.0",
    "uglify-js": "^2.8.4",
    "watchify": "^3.9.0",
    "xml2js": "^0.4.13"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "snazzy": "^6.0.0",
    "standard": "^9.0.0"
  }
}
